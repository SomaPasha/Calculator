<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MyStyleButton"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:srcCompat="@drawable/background"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"

        >
        <space.kuz.calculator.NoImeEditText
            android:id="@+id/basic_edit_text"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_edit_text"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:background="@color/number_color"
            android:scrollbars="vertical"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/null_button"
            android:text="@string/button_ac"
            style="@style/MyStyleButton.SingSpecial" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_button"
            android:text="@string/button_arrow"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/point_button"
            android:text="@string/button_point"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/div_button"
            android:text="@string/button_div"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one_button"
            android:text="@string/button_1"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two_button"
            android:text="@string/button_2"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three_button"
            android:text="@string/button_3"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply_button"
            android:text="@string/button_multiply"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/four_button"
            android:text="@string/button_4"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/five_button"
            android:text="@string/button_5"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six_button"
            android:text="@string/button_6"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus_button"
            android:text="@string/button_minus"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven_button"
            android:text="@string/button_7"
            style="@style/MyStyleButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight_button"
            android:text="@string/button_8"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine_button"
            android:text="@string/button_9"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus_button"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="@string/button_plus"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_button"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/button_0"
            style="@style/MyStyleButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals_button"
            android:text="@string/button_equals"
            style="@style/MyStyleButton.SingSpecial"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/left_bracket_button"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/button_left_bracket"
            style="@style/MyStyleButton.Sing"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/right_bracket_button"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="@string/button_right_bracket"
            style="@style/MyStyleButton.Sing"/>

    </GridLayout>


</FrameLayout>