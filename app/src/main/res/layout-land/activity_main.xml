<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:srcCompat="@drawable/background"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="8"
        android:orientation="horizontal">
        <space.kuz.calculator.NoImeEditText
            android:id="@+id/basic_edit_text"
            android:layout_height="@dimen/button_size_land"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/basic_edit_text"
            android:layout_columnSpan="8"
            android:layout_margin="4dp"
            android:layout_gravity="fill"
            android:background="@color/number_color"
            android:scrollbars="vertical"
            />
        <Button
            android:id="@+id/null_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/special_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="АС"
            android:visibility="visible" />
        <Button
            android:id="@+id/delete_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="←"/>
        <Button
            android:id="@+id/point_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="."/>
        <Button
            android:id="@+id/minus_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="-"/>
        <Button
            android:id="@+id/div_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="÷"/>
        <Button
            android:id="@+id/multiply_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="*"/>
        <Button
            android:id="@+id/equals_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/special_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="="/>
        <Button
            android:id="@+id/plus_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"/>
        <Button
            android:id="@+id/one_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="1"/>
        <Button
            android:id="@+id/two_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="2"/>
        <Button
            android:id="@+id/three_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="3"/>
        <Button
            android:id="@+id/four_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="4"/>
        <Button
            android:id="@+id/five_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="5"/>
        <Button
            android:id="@+id/six_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="6"/>
        <Button
            android:id="@+id/seven_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="7"/>
        <Button
            android:id="@+id/left_bracket_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="("/>
        <Button
            android:id="@+id/eight_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="8"/>
        <Button
            android:id="@+id/nine_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="9"/>
        <Button
            android:id="@+id/zero_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/number_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="0"/>
        <Button
            android:id="@+id/right_bracket_button"
            android:layout_width="@dimen/button_size_land"
            android:layout_height="@dimen/button_size_land"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="@dimen/button_margin"
            android:backgroundTint="@color/computing_signs_color"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=")"/>

    </GridLayout>


</FrameLayout>